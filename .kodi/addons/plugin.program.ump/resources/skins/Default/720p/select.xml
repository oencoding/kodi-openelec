<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- selectdialog -->
	<defaultcontrol always="false">3</defaultcontrol>
	<animation type="WindowOpen">
		<effect type="zoom" start="70" end="100" center="auto" tween="back" easing="inout" time="300" />
		<effect type="fade" start="0" end="100" time="300" />
	</animation>
	<animation type="WindowClose">
		<effect type="zoom" start="100" end="70" center="auto" time="100" />
		<effect type="fade" start="100" end="0" time="100" />
	</animation>
	<zorder>0</zorder>
	<coordinates>
		<posx>0</posx>
	    <posy>0</posy>
	</coordinates>

	<controls>

		<!-- Background -->
		<control type="image" id="3">
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<texture border="5">black.png</texture>
		</control>

		<!-- Heading -->
		<control type="label" id="1">
			<left>20</left>
			<top>40</top>
			<aligny>bottom</aligny>
			<label>Universal Media Provider: SELECT SOURCE </label>
			<width>1200</width>
			<height>10</height>
		</control>

		<control type="progress" id="2">
			<left>510</left>
			<top>45</top>
			<width>740</width>
			<height>20</height>
			<texturebg border="2">progressback.png</texturebg>
			<lefttexture>-</lefttexture>
			<midtexture border="2">progressbar.png</midtexture>
			<righttexture>-</righttexture>
			<overlaytexture>-</overlaytexture>
		</control>


		<!-- Image -->
		<control type="image">
			<left>50</left>
			<top>50</top>
			<width>405</width>
			<height>600</height>
			<texture>$INFO[Container(6).ListItem.Icon]</texture>
			<aspectratio aligny="center">keep</aspectratio>
			<visible>Control.IsVisible(6) + !SubString(Container(6).ListItem.Icon,Default)</visible>
		</control>
		<control type="image">
			<left>50</left>
			<top>50</top>
			<width>405</width>
			<height>600</height>
			<texture>$INFO[Container(6).ListItem.Icon]</texture>
			<colordiffuse>OverlayColorFO</colordiffuse>
			<aspectratio aligny="center">keep</aspectratio>
			<visible>Control.IsVisible(6) + SubString(Container(6).ListItem.Icon,Default)</visible>
		</control>
		<!-- List -->
		<control type="list" id="6">
			<left>510</left>
			<top>60</top>
			<width>1230</width>
			<height>460</height>
			<onup>noop</onup>
			<ondown>5</ondown>
			<onleft>5</onleft>
			<onright>5</onright>
			<orientation>vertical</orientation>
			<scrolltime tween="sine" easing="out">240</scrolltime>

			<itemlayout width="1230" height="36">
				<control type="label">
					<left>80</left>
					<top>0</top>
					<width>1030</width>
					<height>26</height>
					<textcolor>0xFFFFFFFF</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<animation effect="slide" end="0,18" condition="IsEmpty(ListItem.Property(Addon.Summary))">Conditional</animation>
				</control>
			</itemlayout>

			<focusedlayout width="1230" height="36">
				<control type="label">
					<left>80</left>
					<top>0</top>
					<width>1030</width>
					<height>36</height>
					<textcolor>0xFFFFFF00</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<animation effect="slide" end="0,18" condition="IsEmpty(ListItem.Property(Addon.Summary))">Conditional</animation>
				</control>
			</focusedlayout>

		</control>

		<!-- Get more button -->
		<control type="textbox" id="8">
			<left>50</left>
			<top>600</top>
			<width>4200</width>
			<height>100</height>
			<font>font10</font>
			<textcolor>0xCCCCCCCC</textcolor>
		</control>
		<control type="button" id="5">
			<left>150</left>
			<top>912</top>
			<width>400</width>
			<height>66</height>
			<onleft>noop</onleft>
			<onright>noop</onright>
			<onup>3</onup>
			<ondown>noop</ondown>
		</control>

	</controls>

</window>
